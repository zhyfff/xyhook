<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include android:id="@+id/toolBar" layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stoke_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:text="seq"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <View
                    android:background="@color/colorAccent"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/ta_seq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stoke_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="18sp"
                    android:text="startPage"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <View
                    android:background="@color/colorAccent"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></View>
                <EditText
                    android:id="@+id/ta_startPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:digits="1234567890"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stoke_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="18sp"
                    android:text="endPage"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <View
                    android:background="@color/colorAccent"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></View>
                <EditText
                    android:id="@+id/ta_endPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:digits="1234567890"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stoke_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="18sp"
                    android:text="flag"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <View
                    android:background="@color/colorAccent"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/ta_flag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="1"
                    />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_update"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="提交"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
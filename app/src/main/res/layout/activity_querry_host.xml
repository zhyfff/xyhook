<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/toolBar" layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stoke_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="host"
                    android:textColor="@color/colortoobar"
                    android:id="@+id/te_host"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    />
                <View
                    android:background="@color/colorAccent"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </View>
                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/ta_host"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stoke_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="servlet"
                    android:textColor="@color/colortoobar"
                    android:id="@+id/te_servlet"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    />
                <View
                    android:background="@color/colorAccent"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </View>
                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/ta_servlet"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    />

            </LinearLayout>



            <Button
                android:id="@+id/but_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:text="@string/update"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>